@model AppUserSignInModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<form asp-action="GirisYap" method="post" class="mt-5 w-50 mx-auto p-4 shadow">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label class="form-check-label" asp-for="RememberMe"></label>
    </div>
    <input type="submit" class="btn btn-sm btn-info" value="Giriş Yap"/>
    <a asp-action="KayitOl" class="btn btn-warning btn-sm">Kayıt Ol </a>
</form>


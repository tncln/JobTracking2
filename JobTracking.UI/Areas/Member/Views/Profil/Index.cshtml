@model AppUserListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}
@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        @TempData["message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<form asp-action="Index" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <span asp-validation-for="@Model.Name"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.SurName"></label>
        <span asp-validation-for="@Model.SurName"></span>
        <input asp-for="@Model.SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <span asp-validation-for="@Model.Email"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <div>
                    <h4 class="text-center mt-2">Şu anki resminiz</h4>
                    <img src="~/img/@Model.Picture" style="height:10rem!important;" class="w-100" alt="@Model.Name" />
                </div>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-4">
                <div id="alanOnizleme" style="display:none!important;">
                    <h5 class="text-center">Seçtiğiniz Resim</h5>
                    <img src="" id="resimOnizleme" style="height:10rem!important;" class="w-100" />
                </div>

            </div>
            <div class="col-md-12">
                <label> Resim Seç:</label>
                <input type="file" class="form-control-file" name="resim" id="Resim" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2 mt-2"></i> Kaydet</button>


</form>

@section JavaScript{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Resim").change(function (e) {
                $("#alanOnizleme").show();
                $("#resimOnizleme").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>

}
